<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - OneFirm</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand" style="width: 100px; margin-right: 10px;"><img src="~/assets/Logo/scp-logo.svg" style="width: 100px;" /></a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li id="onefirm" onmouseover="subNav('onefirm');">@Html.ActionLink("OneFirm", "Index", "Home")</li>
          <li id="admin" onmouseover="subNav('admin')">@Html.ActionLink("Administration", "Index", "Home")</li>
          <li id="audit" onmouseover="subNav('audit')">@Html.ActionLink("Audit", "Index", "Home")</li>
          <li id="fa" onmouseover="subNav('fa')">@Html.ActionLink("FA", "Index", "Home")</li>
          <li id="healthcare" onmouseover="subNav('healthcare')">@Html.ActionLink("Healthcare", "Index", "Home")</li>
          <li id="hr" onmouseover="subNav('hr')">@Html.ActionLink("HR", "Index", "Home")</li>
          <li id="it" onmouseover="subNav('it')">@Html.ActionLink("IT", "Index", "IT")</li>
          <li id="marketing" onmouseover="subNav('marketing')">@Html.ActionLink("Marketing", "Index", "Home")</li>
          <li id="tax" onmouseover="subNav('tax')">@Html.ActionLink("Tax", "Index", "Home")</li>
        </ul>
        <p class="nav navbar-text navbar-right" style="text-transform: capitalize;">@Html.ActionLink("Hello, " + string.Join(" ", User.Identity.Name.Remove(0, 8).Split('.')) + "!", "UserProfile", "Home")</p>
      </div>
      @Html.Partial("_Nav")
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
  </div>
  <div id="modalBox"></div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/tinymce")
  @Scripts.Render("~/bundles/grendelfly")
  @RenderSection("scripts", required: false)
</body>
</html>