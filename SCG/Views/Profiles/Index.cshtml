@model IEnumerable<SCG.Models.Profile>

@{
    ViewBag.Title = "Social Roster";
    ViewBag.Page_Nav = "onefirm";
    ViewBag.Page_Area = "social_roster_area";
    ViewBag.Page_ID = "social_roster_pge";
    ViewBag.Page_Layout = "columns_3";
}

<style>
    #Roster {
        font-size: 0;
    }

        #Roster .roster-profile {
            width: 25%;
            display: inline-block;
            vertical-align: top;
            text-align: center;
            cursor: pointer;
        }


        #Roster .roster-photo {
            display: block;
            width: 92%;
            height: 330px;
            margin: 4%;
            background: #CCC url(/images/silhouette.png) center top no-repeat;
            background-size: cover;
            border-radius: 8px;
        }
</style>

<div class="page-holder">
    <h2>@ViewBag.Title</h2>
    <div id="Roster">
        <span style="color:pink;"><i class="fa fa-clock-o fa-spin" aria-hidden="true" style="color:pink;"></i> Loading...</span>
        @*@{ 
