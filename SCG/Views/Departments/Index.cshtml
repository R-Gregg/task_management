@model IEnumerable<SCG.Models.Department>

@{
    ViewBag.Title = "Departments";
    ViewBag.Page_Area = "admin_area";
    ViewBag.Page_ID = "departments_pge";
    ViewBag.Page_Layout = "columns_3";
}


<h2>@ViewBag.Title</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.EmergencyContact)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.EmergencyContactPhone)
      </th>
      <th>Actions</th>
    </tr>
  </thead>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EmergencyContact)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EmergencyContactPhone)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
  }

</table>
